function TransferForm({ 
  onSubmit, 
  onClose,
  balances 
}: { 
  onSubmit: (transfer: { from: 'cash' | 'bank' | 'savings', to: 'cash' | 'bank' | 'savings', amount: number, description: string }) => void
  onClose: () => void
